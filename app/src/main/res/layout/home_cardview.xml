<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/home_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cardview_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lyngby Storcenter"
                android:textSize="24sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/cardview_image"
                android:layout_toRightOf="@+id/cardview_image"
                android:layout_toEndOf="@+id/cardview_image"
                android:paddingRight="5dp" />

            <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:id="@+id/cardview_image"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/matas_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matas"
                android:id="@+id/cardview_butik"
                android:textSize="18sp"
                android:layout_below="@+id/cardview_center"
                android:layout_alignLeft="@+id/cardview_center"
                android:layout_alignStart="@+id/cardview_center"
                android:layout_marginTop="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rabat 20%"
                android:id="@+id/cardview_rabat"
                android:layout_alignBottom="@+id/cardview_butik"
                android:layout_alignRight="@+id/cardview_center"
                android:layout_alignEnd="@+id/cardview_center"
                android:textColor="#ff06abff"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Der er 20% pÃ¥ vatrundeller fra kl. 12:00 til 16:00, kun i dag!"
                android:id="@+id/cardview_desc"
                android:layout_below="@+id/cardview_rabat"
                android:layout_alignLeft="@+id/cardview_butik"
                android:layout_alignStart="@+id/cardview_butik"
                android:layout_marginTop="19dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>